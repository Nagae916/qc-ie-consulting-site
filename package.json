{
  "name": "qc-ie-consulting-site",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "gen": "npx -y contentlayer2 build",
    "predev": "node scripts/guard-mdx.js",
    "dev": "npm run gen && next dev -p 3000",
    "prebuild": "node scripts/guard-mdx.js",
    "build": "npm run gen && next build",
    "start": "next start -p 3000",
    "lint": "next lint",
    "lint:fast": "next lint --cache --max-warnings=0",
    "check:routes": "node ./scripts/check-routes.js",
    "check:dup": "node ./scripts/check-duplicate-urls.js",
    "check:audit": "node ./scripts/audit-guides.js",
    "check:fast": "npm run lint:fast && npm run check:routes && npm run check:dup && npm run check:audit",
    "check:ci": "npm run gen && npm run lint:all && npm run check:fast && next build",
    "guard": "node scripts/guard-mdx.js",
    "check": "npm run check:fast",

    "typecheck": "tsc --noEmit",
    "lint:unused:code": "knip",
    "lint:unused:exports": "ts-prune -p tsconfig.json",
    "lint:unused:deps": "depcheck --ignores=@types/node --skip-missing=true --ignore-dirs=node_modules,.next,.contentlayer",
    "lint:graph": "madge --circular --extensions ts,tsx src pages",
    "lint:all": "npm run typecheck && npm run lint:unused:code && npm run lint:unused:exports && npm run lint:unused:deps && npm run lint:graph"
  },
  "dependencies": {
    "next": "14.2.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "rss-parser": "3.12.0",
    "chart.js": "^4.4.3",
    "react-chartjs-2": "^5.2.0",
    "contentlayer2": "^0.5.0",
    "next-contentlayer2": "^0.5.0",
    "remark-math": "^6.0.0",
    "rehype-katex": "^7.0.0",
    "katex": "^0.16.11",
    "unified": "^11.0.0",
    "remark-parse": "^11.0.0",
    "remark-gfm": "^4.0.0",
    "remark-rehype": "^11.0.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-slug": "^6.0.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-stringify": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "20.14.12",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "autoprefixer": "10.4.20",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "eslint-plugin-unused-imports": "^3",
    "postcss": "8.4.41",
    "tailwindcss": "3.4.10",
    "typescript": "5.5.4",
    "knip": "^4",
    "depcheck": "^1",
    "ts-prune": "^0.10",
    "madge": "^6"
  },
  "overrides": {
    "eslint": "8.57.0"
  },
  "engines": {
    "node": ">=18 <21"
  }
}
