{
  "scripts": {
    "gen": "contentlayer2 build",

    "dev": "npm run gen && next dev -p 3000",
    "build": "npm run gen && next build",
    "start": "next start -p 3000",

    // 日常の軽量チェック（速い）
    "lint:fast": "next lint --cache --max-warnings=0",
    "check:fast": "npm run lint:fast && node ./scripts/check-routes.js",

    // CI/本番前チェック（厳格だけど一回だけ）
    // - Next.js の build が型チェックも実行するので、ここで tsc は別途回さない
    "check:ci": "npm run gen && npm run check:fast && next build",

    // 既存
    "lint": "next lint",
    "check:routes": "node ./scripts/check-routes.js",
    "check": "npm run check:fast",  // ← ローカル既定は軽量版に
    "postinstall": "contentlayer2 build"
  }
}
