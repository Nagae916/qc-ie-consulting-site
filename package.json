{
  "scripts": {
    "gen": "contentlayer2 build",
    "dev": "npm run gen && next dev -p 3000",
    "build": "npm run gen && next build",
    "start": "next start -p 3000",

    // ✅ ESLint + TypeScript チェックをまとめて実行
    "lint": "next lint",
    "typecheck": "tsc --noEmit",

    // ✅ CI/CD で安全に使える一括チェック
    "check:routes": "node ./scripts/check-routes.js",
    "check": "npm run lint && npm run typecheck && npm run check:routes",

    // ✅ 開発者が内容を素早く確認できる
    "format": "prettier --write .",
    "preview": "npm run build && npm run start",

    // ✅ データやキャッシュのクリーンアップ
    "clean": "rm -rf .next .contentlayer node_modules && npm install",

    "postinstall": "contentlayer2 build"
  }
}
