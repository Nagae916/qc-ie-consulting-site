{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    // JS は禁止
    "allowJs": false,
    // 型安全を最大化
    "strict": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    // 出力は Next.js がやるので不要
    "noEmit": true,
    // 型チェックの安定性
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // パスエイリアス
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "contentlayer/generated": ["./.contentlayer/generated"]
    },
    // Node 型の利用
    "types": ["node"],
    "incremental": true,
    // ※ 次の3つは Next.js に合わせて必須
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mdx",
    ".next/types/**/*.ts",
    ".contentlayer/generated",
    "src/types" // 手元の d.ts を拾う
  ],
  "exclude": [
    "node_modules",
    ".next",
    ".contentlayer",
    "public",
    "qc-ie-consulting-site.old",
    "__archive_old",
    "**/__pages_bak/**",
    "**/__app_bak/**"
  ]
}
